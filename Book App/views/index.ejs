<h2>Recently added</h2>
<div>
    <% books.forEach((book) => { %>
        <a href="/books/<%= book.id %>">
            <!-- The book.coverImagePath is a virtual property we created on bookSchema -->
            <img width="100" height="150" src="<%= book.coverImagePath %>" />
        </a>
    <% }); %>
</div>